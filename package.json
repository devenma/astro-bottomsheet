{
  "name": "@devenma/astro-bottomsheet",
  "version": "1.0.1",
  "description": "Draggable bottom sheet / drawer component for Astro with TypeScript support",
  "keywords": [
    "astro",
    "astro-component",
    "bottomsheet",
    "drawer",
    "modal",
    "panel",
    "ui",
    "draggable",
    "bottom-drawer",
    "sheet"
  ],
  "homepage": "https://github.com/devenma/astro-bottomsheet#readme",
  "bugs": {
    "url": "https://github.com/devenma/astro-bottomsheet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devenma/astro-bottomsheet.git"
  },
  "license": "MIT",
  "author": "Enmanuel Rosales Leon",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/core/BottomSheet.d.ts",
      "import": "./dist/core/BottomSheet.js"
    },
    "./components": {
      "import": "./dist/components/BottomSheet.astro"
    },
    "./components/trigger": {
      "import": "./dist/components/BottomSheetTrigger.astro"
    },
    "./core": {
      "types": "./dist/core/BottomSheet.d.ts",
      "import": "./dist/core/BottomSheet.js"
    },
    "./helpers": {
      "types": "./dist/core/helpers.d.ts",
      "import": "./dist/core/helpers.js"
    },
    "./instance": {
      "types": "./dist/core/bottomSheetInstance.d.ts",
      "import": "./dist/core/bottomSheetInstance.js"
    },
    "./styles": {
      "import": "./dist/styles/globals.css"
    }
  },
  "main": "./dist/core/BottomSheet.js",
  "types": "./dist/core/BottomSheet.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run build:css && npm run copy-astro",
    "build:css": "postcss src/styles/globals.css -o dist/styles/globals.css",
    "copy-astro": "cpy \"src/components/**/*.astro\" \"dist/components\"",
    "prepublishOnly": "npm run build",
    "dev": "tsc --watch",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "25.0.3",
    "astro": "5.16.6",
    "cpy-cli": "6.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "6.1.2",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "astro": "5.16.6"
  },
  "module": "./dist/core/BottomSheet.js"
}
